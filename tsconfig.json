{
  "include": [
    "src/**/*",
    // "tests/**/*"
  ],
  "compilerOptions": {
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
